/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model. All user-specific
 * data, including profiles for players and clubs, is stored in subcollections under a
 * unique user document. Access is granted only if the authenticated user's ID matches the
 * user ID in the document path.
 *
 * Data Structure: The data is organized hierarchically under the `/users/{userId}` path.
 * A root `User` document stores basic information, while detailed `PlayerProfile` and
 * `ClubProfile` documents reside in separate, dedicated subcollections. This structural
 * segregation simplifies security and prevents data access conflicts.
 *
 * Key Security Decisions:
 * - User Data Privacy: A user can only access data within their own document tree
 *   (i.e., under `/users/{their-own-userId}`).
 * - No User Listing: It is not possible for any client to list all documents in the
 *   top-level `users` collection. This prevents user enumeration and protects privacy.
 * - Path-Based Security: Authorization relies on the `userId` wildcard in the document
 *   path, which is the most secure and performant method as it avoids extra database reads.
 * - Relational Integrity: On document creation, rules enforce that the internal `userId`
 *   field matches the `userId` in the path. On updates, this field is immutable to
 *   prevent documents from being "moved" between users.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------------------

    /**
     * Checks if a user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the currently authenticated user's UID matches the provided userId.
     * This is the foundation of the user-ownership model.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * For update and delete operations, confirms ownership AND that the document
     * already exists. Prevents modifying or deleting non-existent data.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * On create for a User document, validates ownership and ensures the
     * document's internal `id` field correctly matches the user's UID.
     */
    function isCreatingOwnUserDocument(userId) {
      return isOwner(userId) && request.resource.data.id == userId;
    }

    /**
     * On update for a User document, ensures the document's internal `id`
     * field cannot be changed, preserving the link to the user's UID.
     */
    function isUpdatingOwnUserDocument() {
      return request.resource.data.id == resource.data.id;
    }

    /**
     * On create for a profile subcollection, validates path ownership and ensures
     * the new document's internal `userId` field matches the parent user's UID.
     */
    function isCreatingOwnProfile(userId) {
      return isOwner(userId) && request.resource.data.userId == userId;
    }
    
    /**
     * On update for a profile subcollection, ensures the internal `userId`
     * field is immutable, preventing the profile from being reassigned.
     */
    function isUpdatingOwnProfile() {
      return request.resource.data.userId == resource.data.userId;
    }

    // --------------------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------------------

    /**
     * @description Controls access to a user's primary document, which holds their email and type.
     * @path /users/{userId}
     * @allow (create) An authenticated user creating their own user document for the first time.
     * @deny (get) An authenticated user trying to read another user's document.
     * @principle Restricts access to a user's own data tree and prevents user enumeration.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isCreatingOwnUserDocument(userId);
      allow update: if isExistingOwner(userId) && isUpdatingOwnUserDocument();
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures the player profiles nested under a user document.
     * @path /users/{userId}/playerProfiles/{profileId}
     * @allow (create) An authenticated user creating a player profile for themselves.
     * @deny (update) User 'abc' trying to update a player profile under '/users/xyz/...'.
     * @principle Enforces document ownership for all operations based on the document path.
     */
    match /users/{userId}/playerProfiles/{profileId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isCreatingOwnProfile(userId);
      allow update: if isExistingOwner(userId) && isUpdatingOwnProfile();
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures the club profiles nested under a user document.
     * @path /users/{userId}/clubProfiles/{clubProfileId}
     * @allow (list) An authenticated user listing all club profiles they own.
     * @deny (delete) A user trying to delete a club profile that does not belong to them.
     * @principle Enforces document ownership for all operations based on the document path.
     */
    match /users/{userId}/clubProfiles/{clubProfileId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isCreatingOwnProfile(userId);
      allow update: if isExistingOwner(userId) && isUpdatingOwnProfile();
      allow delete: if isExistingOwner(userId);
    }
  }
}